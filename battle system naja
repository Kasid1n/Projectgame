#include <iostream>
#include <ctime>

using namespace std;

struct sta {
    int hp, def, att, mag, spd;
};

void combat(struct sta player,struct sta mon) {
    int choice;
    cout <<"Pick 1 or 2";
    cin >> choice;// ยังไม่เสร็จ

    while (player.hp > 0) {
        if (player.hp <= 0) {
            cout << "defeated";
            break;
        }
        if (mon.hp <=0){
            cout << "win";
            break;
        }
    }
}

int main() {
    sta player = {10, 3, 3, 5, 10};
    sta mon = {10, 1, 2, 0, 5};
    combat(player,mon);
    return 0;
}
